<?xml version="1.0" encoding="utf-8" ?>
<gadget>
  <name>McDesktopInfo</name>
  <version>${gadget.version}</version>
  <author name="Damarus">
      <info url="https://github.com/Dam4rusxp/McDesktopInfo" />
  </author>
  <copyright>&#169; 2014 Damarus</copyright>
  <description>A Windows Sidebar gadget that displays information from a Bukkit server.</description>
  <icons>
      <icon height="100" width="100" src="icon.png" />
  </icons>
  <hosts>
    <host name="sidebar">
      <base type="HTML" apiVersion="1.0.0" src="gadget.html" />
      <permissions>Full</permissions>
      <platform minPlatformVersion="1.0" />
      <defaultImage src="icon.png" />
    </host>
  </hosts>
</gadget>
